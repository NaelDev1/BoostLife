<Window x:Class="BoostLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoostLife"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:CustomControls="clr-namespace:BoostLife.CustomControls"
        xmlns:vm="clr-namespace:BoostLife.ViewModels"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Title="BoostLife" Height="690" Width="1280">
    <Window.DataContext>
        <vm:MainVM/>
    </Window.DataContext>

    <Border CornerRadius="10" >

        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#151515" Offset="0"/>
                <GradientStop Color="#202020" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>



        <Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5">
                <Button x:Name="CloseButton"
                        Click="CloseButton_Click"
                        Style="{StaticResource IconButton}"  >
                    <Icon:BoxIcons Kind="RegularMinus"/>

                </Button>
                <Button x:Name="MaximizeButton"
                        Click="CloseButton_Click"
                        Style="{StaticResource IconButton}"  Margin="5 0 0 0">
                    <Icon:BoxIcons Kind="RegularSquare"/>

                </Button>
                <Button x:Name="MinimizeButton"
                        Click="CloseButton_Click"
                        Style="{StaticResource IconButton}" Margin="5 0 0 0" >
                    <Icon:BootstrapIcons Kind="X"/>

                </Button>
            </StackPanel>

            <TextBlock Text="1.0.0" Foreground="#bcbc1d" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5" HorizontalAlignment="Center" Height="60" VerticalAlignment="Top">
                    <Icon:PackIconGameIcons Kind="Thunderball" Foreground="Yellow" Width="50" Height="50" VerticalAlignment="Center"/>
                    <TextBlock Text="BoostLife" Foreground="White" FontWeight="Bold" FontSize="50" Margin="10 0 0 0"/>
                </StackPanel>
                <StackPanel Grid.Row="1">


                    <WrapPanel Margin="5" >
                        <CustomControls:NavBarButton Title="Dashboard" Icon="BarChartLine"/>
                        <CustomControls:NavBarButton Title="Divino" Icon="Fire"/>
                        <CustomControls:NavBarButton Title="Contas" Icon="CreditCard"/>
                        <CustomControls:NavBarButton Title="Vícios" Icon="SignStop"/>
                        <CustomControls:NavBarButton Title="Livros" Icon="Book"/>
                        <CustomControls:NavBarButton Title="Saúde" Icon="PersonWalking"/>
                        <CustomControls:NavBarButton Title="Desejos" Icon="Bag"/>
                        <CustomControls:NavBarButton Title="Agenda" Icon="ListCheck"/>
                        <CustomControls:NavBarButton Title="Tasks" Icon="Play"/>
                        <CustomControls:NavBarButton Title="Diário" Icon="BodyText"/>
                        <CustomControls:NavBarButton Title="Métas" Icon="EmojiSmile"/>
                        <CustomControls:NavBarButton Title="Projetos" Icon="PersonWorkspace" ClickCommand="{Binding IrParaProjetosCommand}"/>
                    </WrapPanel>
                </StackPanel>



                <ContentControl Content="{Binding CurrentView}" Grid.Row="1" Grid.Column="1"/>

            </Grid>


        </Grid>

    </Border>
</Window>
