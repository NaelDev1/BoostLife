<UserControl x:Class="BoostLife.CustomControls.ExagonalButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BoostLife.CustomControls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="bt" TargetType="Button">

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Polygon x:Name="rec" Fill="#202020"  Stroke="#606060" StrokeThickness="5"  HorizontalAlignment="Center" VerticalAlignment="Center"
                                     >
                                <Polygon.RenderTransform>
                                    <TranslateTransform X="20"/>
                                </Polygon.RenderTransform>
                                <Polygon.Points>
                                    <Point X="-30" Y="45"></Point>
                                    <Point X="130" Y="45"></Point>
                                    <Point X="160" Y="0"></Point>
                                    <Point X="0" Y="0"></Point>

                                </Polygon.Points>

                            </Polygon>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Fill" Value="#151515" TargetName="rec"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid     >
        <Button Style="{StaticResource bt}" Command="{Binding ClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <TextBlock Text="Novo" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" FontWeight="Black" FontStyle="Italic" Foreground="White"/>

        </Button>


    </Grid>
</UserControl>
