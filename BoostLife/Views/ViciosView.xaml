<UserControl x:Class="BoostLife.Views.ViciosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BoostLife.Views"
             xmlns:Cc="clr-namespace:BoostLife.CustomControls"
             xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:vm="clr-namespace:BoostLife.ViewModels"
             xmlns:cv="clr-namespace:BoostLife.Converters"
             mc:Ignorable="d"
             Name="TelaVicios"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:VicioVM/>
    </UserControl.DataContext>
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <icon:PackIconBootstrapIcons Kind="SignStop" Width="40" Height="40" Foreground="#cbcbcb" VerticalAlignment="Center"/>
            <TextBlock Text="Tela de vícios" Foreground="#cbcbcb" FontWeight="Medium" FontSize="35" VerticalAlignment="Center" Margin="10 0 0 0"/>
        </StackPanel>

        <Separator VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="755"  Margin="0 5 0 0" BorderBrush="#202020" />

        <Cc:ExagonalButton HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10 10 30 0" x:Name="btAdd"  ClickCommand="{Binding OpenCadastroCommand}"/>
        <Popup IsOpen="{Binding CadOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" x:Name="popCadastro" AllowsTransparency="True" Placement="Center" HorizontalOffset="0" >

            <Border Background="#101010" Width="400" Height="350" CornerRadius="10">
                <Grid>
                    <Button Style="{StaticResource IconButton}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5" Command="{Binding CloseCadastroCommand}">
                        <icon:BootstrapIcons Kind="X"/>
                    </Button>

                    <Grid Margin="10 40 10 10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <StackPanel>
                            <Label Foreground="White">Descrição</Label>
                            <TextBox Text="{Binding CurrentVicio.Descricao, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                        </StackPanel>
                        <StackPanel Grid.Row="1">
                            <Label Foreground="White">Início da jornada</Label>
                            <DatePicker SelectedDate="{Binding CurrentVicio.InicioJornada,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Converter={StaticResource DateTimeConverter}}"/>
                        </StackPanel>
                        <StackPanel Grid.Row="2">
                            <Label Foreground="White">Dias Meta</Label>
                            <TextBox Text="{Binding CurrentVicio.DiasMeta,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay }" />
                        </StackPanel>

                        <WrapPanel Grid.Row="3" Margin="0 10">
                            <Button Content="Cancelar" Command="{Binding CloseCadastroCommand}"/>
                            <Button Content="Salvar" Margin="5 0 0 0" Command="{Binding SalvarVicioCommand}"/>
                        </WrapPanel>

                    </Grid>
                </Grid>


            </Border>

        </Popup>

        <ItemsControl ItemsSource="{Binding Vicios}" Grid.Row="1"  Margin="20">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                        <StackPanel>
                            <Cc:RegenerateControl Height="90" Progress="{Binding Progress, UpdateSourceTrigger=PropertyChanged}"
                                                  Date="{Binding TempoPassado}"
                                                  Title="{Binding Descricao}"
                                                  Margin="0 0 0 10"/>
                        </StackPanel>
                    </ScrollViewer>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </Grid>
</UserControl>
